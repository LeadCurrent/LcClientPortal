                        <li>
                            <a href="~/Schools" id="nav_Schools">
                                <span class="title">Schools</span>
                            </a>
                        </li>
                    }
                    @if (CommonClasses.Environment.Sources && (User.Claims.Where(c => c.Type.Contains("Sources")).FirstOrDefault() != null || User.Claims.Where(c => c.Type == "Admin").FirstOrDefault() != null || User.Claims.Where(c => c.Type == "SystemAdmin").FirstOrDefault() != null) && User.Claims.Where(c => c.Type == "CompanyId").FirstOrDefault() != null)
                    {
                        <li>
                            <a href="~/Sources" id="nav_Sources">
                                <span class="title">Sources</span>
                            </a>
