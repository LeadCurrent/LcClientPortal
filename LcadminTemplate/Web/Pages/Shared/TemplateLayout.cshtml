                            </div>
                        </li>
                    }

                    @if (CommonClasses.Environment.Templates
                   && (User.Claims.Where(c => c.Type.Contains("Templates")).FirstOrDefault() != null
                   || User.Claims.Where(c => c.Type == "Developer").FirstOrDefault() != null && User.Claims.Where(c => c.Type == "CompanyId").FirstOrDefault() != null))
