            </div>


            @if (signInManager.IsSignedIn(User))
            {
                <ul style="border-top:solid 1px #EEE">
                    @if (CommonClasses.Environment.Customers && (User.Claims.Where(c => c.Type.Contains("Customers")).FirstOrDefault() != null || User.Claims.Where(c => c.Type == "Admin").FirstOrDefault() != null || User.Claims.Where(c => c.Type == "SystemAdmin").FirstOrDefault() != null) && User.Claims.Where(c => c.Type == "CompanyId").FirstOrDefault() != null)
                    {
                        <li>
                            <a href="~/Customer" id="nav_customers">
                                <span class="title">Customers</span>
                            </a>
                        </li>
                    }
                    @* @if (CommonClasses.Environment.Schools && (User.Claims.Where(c => c.Type.Contains("DegreeLevels")).FirstOrDefault() != null || User.Claims.Where(c => c.Type == "Admin").FirstOrDefault() != null || User.Claims.Where(c => c.Type == "SystemAdmin").FirstOrDefault() != null) && User.Claims.Where(c => c.Type == "CompanyId").FirstOrDefault() != null)
                    { *@
                        <li>
                            <a href="~/DegreeLevel" id="nav_DegreeLevel">
                                <span class="title">Degree Level</span>
                            </a>
                        </li>
                    @* } *@

                    @if (CommonClasses.Environment.Schools && (User.Claims.Where(c => c.Type.Contains("Schools")).FirstOrDefault() != null || User.Claims.Where(c => c.Type == "Admin").FirstOrDefault() != null || User.Claims.Where(c => c.Type == "SystemAdmin").FirstOrDefault() != null) && User.Claims.Where(c => c.Type == "CompanyId").FirstOrDefault() != null)
