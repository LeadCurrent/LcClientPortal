                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    @if (CommonClasses.Environment.CompanyProfile &&
                                   (User.Claims.Where(c => c.Type.Contains("CompanyProfile")).FirstOrDefault() != null
                                   || User.Claims.Where(c => c.Type == "Admin").FirstOrDefault() != null || User.Claims.Where(c => c.Type == "SystemAdmin").FirstOrDefault() != null))
                                    {
                                        <li>
                                            <a href="~/CompanyProfile" id="nav_CompanyProfile">
                                                <span class="title">Profile</span>
