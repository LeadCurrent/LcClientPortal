                    @if ((CommonClasses.Environment.CompanyProfile || CommonClasses.Environment.Users)
                   && (User.Claims.Where(c => c.Type.Contains("CompanyProfile")).FirstOrDefault() != null
                   || User.Claims.Where(c => c.Type.Contains("Users")).FirstOrDefault() != null
                   || User.Claims.Where(c => c.Type == "Admin").FirstOrDefault() != null
                   || User.Claims.Where(c => c.Type == "SystemAdmin").FirstOrDefault() != null || User.Claims.Where(c => c.Type == "Company").FirstOrDefault() != null) && User.Claims.Where(c => c.Type == "CompanyId").FirstOrDefault() != null)
