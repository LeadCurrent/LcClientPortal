@model SignUpVM
@using Web
@using Data
@{
    Layout = "~/Pages/Shared/FrontEndLayout.cshtml";
}
<main class="main">
    <div class="page-banner text-white" style="background-image: url(../FrontEnd/images/signup.jpg);">
        <div class="container">
            <div class="page-title">
                <p data-aos="fade-up" data-aos-duration="1000" data-aos-once="true">Sign Up</p>
                <h2 data-aos="fade-up" data-aos-duration="1500" data-aos-once="true">14 days completely free</h2>

            </div>
        </div>
    </div>
    <div class="sec-contact-us sec-gap">
        <div class="container">
            <div class="block-header text-center">
                <div class="d-flex align-items-center justify-content-center block-title mb-2">
                    <div class="bullet-sm">
                        <hr>
                    </div>
                    <div class="px-2">
                        Sign Up
                    </div>
                    <div class="bullet-sm">
                        <hr>
                    </div>
                </div>
                <h2>Get Started Today!</h2>
                <div class="mt-3">
                    <h5>No Contracts, No Commitments and No Risk! </h5>
                    <h5>Get started today and pick your plan later.</h5>
                    <h5>You dont even need a credit card to start your free trial.</h5>
                </div>
            </div>
            @using (Html.BeginForm("Register", "Signup"))
            {
                @Html.HiddenFor(m => m.AjaxUpdate)
                @Html.HiddenFor(m => m.Param)
                @Html.HiddenFor(m => m.Action)
                @Html.HiddenFor(m => m.User.Id)
                @Html.HiddenFor(m => m.Company.Id)
                <div class="row mb-lg-5 pb-5">
                    <div class="col-lg-3">
                    </div>
                    <div class="col-lg-6">
                        <div class="card-contact h-100" data-aos="fade-left" data-aos-duration="1500" data-aos-once="true">
                            @{
                                var message = ViewBag.Message as string;
                            }

                            @if (!string.IsNullOrEmpty(message))
                            {
                                <div class="alert alert-warning">
                                    @message
                                </div>
                            }
                            <div class="form-group input-single">
                                <label>Full Name<span id="SignupName_Invalid" class="required" style="color:red">*</span></label>
                                @Html.EditorFor(m => m.SignupName, new { htmlattributes = new { @class = "form-control requiredfield", onkeyup = "ValidateForm();" } })
                            </div>
                            <div class="form-group input-single">
                                <label>Email<span id="SignupEmail_Invalid" class="required" style="color:red">*</span></label>
                                @Html.EditorFor(m => m.SignupEmail, new { htmlattributes = new { @class = "form-control requiredfield", onkeyup = "ValidateForm();" } })
                            </div>
                            <div class="form-group input-single">
                                <label>Phone</label>
                                @Html.EditorFor(m => m.SignupPhone, new { htmlattributes = new { @class = "form-control", onkeyup = "formatphone('SignupPhone'); " } })
                            </div>
                            <div class="form-group input-single">
                                <label>Company<span id="Company_Name_Invalid" class="required" style="color:red">*</span></label>
                                @Html.EditorFor(m => m.Company.Name, new { htmlattributes = new { @class = "form-control requiredfield", onkeyup = "ValidateForm();" } })
                            </div>
                            <div style="color:red; text-align:center" id="Invalid">
                                <i>Fill in all required fields to get started</i>
                            </div>

                            <script>ValidateForm();</script>
                            <div id="Valid">
                                <button class="btn-primary w-100" onclick="NonAjax('Create')">Start Free Trial</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                    </div>
                </div>
            }
            <div class="contact-lead-text" data-aos="fade-up" data-aos-duration="1500" data-aos-once="true">
                <p>By clicking "Start Free Trial", you agree to Lead Current Terms of Use and Privacy Policy. You consent to receive phone calls and SMS messages from Pro-Workflow to provide updates on your order and/or for marketing purposes. Message frequency depends on your activity. You may opt-out by texting "STOP". Message and data rates may apply.</p>
                <p>Disclaimer: By providing my contact information to Lead Current, I acknowledge and give my explicit consent to be contacted via SMS and receive emails for various purposes, which may include marketing and promotional content. Message and data rates may apply. Reply STOP to opt-out.</p>
                <p>For more information please refer to <a href="~/privacy">Lead Current privacy policy</a>.</p>
            </div>
            <div class="row justify-content-center">
@*                 <div class="col-lg-4">
                    <div class="card-widget t-hover" data-aos="fade-up" data-aos-duration="1000" data-aos-once="true">
                        <a href="tel:(000) 000-0000" class="d-flex align-items-center">
                            <span class="ic">
                                <i class="bi bi-telephone-fill"></i>
                            </span>
                            <span class="text-right">
                                <h6>Call us on_</h6>
                                <p class="m-0">(000) 000-0000</p>
                            </span>
                        </a>
                    </div>
                </div> *@
                <div class="col-lg-4">
                    <div class="card-widget t-hover" data-aos="fade-up" data-aos-duration="1500" data-aos-once="true">
                        <a href="mailto:support@LeadCurrent.com" class="d-flex align-items-center">
                            <span class="ic">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <span class="text-right">
                                <h6>Email ID</h6>
                                <p class="m-0">support@LeadCurrent.com</p>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card-widget t-hover" data-aos="fade-up" data-aos-duration="2000" data-aos-once="true">
                        <a href="javascript:vodi(0)" class="d-flex align-items-center">
                            <span class="ic">
                                <i class="bi bi-geo-alt-fill"></i>
                            </span>
                            <span class="text-right">
                                <h6>Location</h6>
                                <p class="m-0">Katy, Texas</p>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>ValidateForm();</script>