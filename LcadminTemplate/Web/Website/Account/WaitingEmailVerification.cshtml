@model SignUpVM
@using Web
@using Data
@{
    Layout = "~/Pages/Shared/FrontEndLayout.cshtml";
}
<main class="main">
    <div class="page-banner text-white" style="background-image: url(../FrontEnd/images/signup.jpg);">
        <div class="container">
            <div class="page-title">
                <p data-aos="fade-up" data-aos-duration="1000" data-aos-once="true">Sign Up</p>
                <h2 data-aos="fade-up" data-aos-duration="1500" data-aos-once="true">14 days completely free</h2>

            </div>
        </div>
    </div>
    <div class="sec-contact-us sec-gap">
        <div class="container">
            <div class="block-header text-center">
                <div class="d-flex align-items-center justify-content-center block-title mb-2">
                    <div class="bullet-sm">
                        <hr>
                    </div>
                    <div class="px-2">
                        Sign Up
                    </div>
                    <div class="bullet-sm">
                        <hr>
                    </div>
                </div>
                <h2>Welcome to Lead Current!</h2>
                <div class="mt-3">
                    <h6>To finish setting up your account we need to verify your</h6>
                    <h6>email address. We just send you an email for verification.</h6><br/>
                    <h6>If you have trouble verifying your email address or have</h6>
                    <h6>additional questions please contact us at</h6><br />
                    <h5>support@LeadCurrent.com</h5><br /><br />
                </div>
            </div>
            <div class="contact-lead-text" data-aos="fade-up" data-aos-duration="1500" data-aos-once="true">
                <p>By clicking "Start Free Trial", you agree to Lead Current Terms of Use and Privacy Policy. You consent to receive phone calls and SMS messages from Pro-Workflow to provide updates on your order and/or for marketing purposes. Message frequency depends on your activity. You may opt-out by texting "STOP". Message and data rates may apply.</p>
                <p>Disclaimer: By providing my contact information to Lead Current, I acknowledge and give my explicit consent to be contacted via SMS and receive emails for various purposes, which may include marketing and promotional content. Message and data rates may apply. Reply STOP to opt-out.</p>
                <p>For more information please refer to <a href="~/privacy">Lead Current privacy policy</a>.</p>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <div class="card-widget t-hover" data-aos="fade-up" data-aos-duration="1500" data-aos-once="true">
                        <a href="mailto:support@LeadCurrent.com" class="d-flex align-items-center">
                            <span class="ic">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <span class="text-right">
                                <h6>Email ID</h6>
                                <p class="m-0">support@LeadCurrent.com</p>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card-widget t-hover" data-aos="fade-up" data-aos-duration="2000" data-aos-once="true">
                        <a href="javascript:vodi(0)" class="d-flex align-items-center">
                            <span class="ic">
                                <i class="bi bi-geo-alt-fill"></i>
                            </span>
                            <span class="text-right">
                                <h6>Location</h6>
                                <p class="m-0">Katy, Texas</p>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>ValidateForm();</script>